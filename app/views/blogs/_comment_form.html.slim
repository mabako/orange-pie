= form_for @comment, :url => blog_comment_path(@blog) do |f|
  .post.small
    .author
      .avatar
        img src=current_user.avatar_small title=current_user.name

    - if @comment.errors.any?
      #error_explanation
        h2 = "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
        ul
          - @comment.errors.full_messages.each do |message|
            li = message
    .field
      = f.label :text, 'Comment'
      = f.text_area :text, :rows => 5
    .actions = f.submit 'Add Comment', :disable_with => 'Adding Comment...', :class => 'do'
